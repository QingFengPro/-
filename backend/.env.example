# 数据库配置
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/weibo_sentiment_db
SQLALCHEMY_ECHO=False

# Flask/FastAPI 配置
APP_NAME=Weibo Sentiment Analysis System
DEBUG=True
SECRET_KEY=your-secret-key-here

# 爬虫配置
CRAWLER_INTERVAL=3600  # 1小时刷新一次
MAX_CONCURRENT_CRAWLERS=3

# 情感分析模型配置
SENTIMENT_MODEL_NAME=bert-base-chinese
MODEL_PATH=./models/sentiment_model

# API配置
API_TIMEOUT=30
MAX_REQUEST_SIZE=10485760

# 日志
LOG_LEVEL=INFO
